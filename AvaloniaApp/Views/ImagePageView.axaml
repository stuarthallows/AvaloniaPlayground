<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:AvaloniaApp.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AvaloniaApp.Views.ImagePageView"
             x:DataType="viewModels:ImagePageViewModel">
    <ScrollViewer>
        <StackPanel>
            <TextBlock Margin="0 20" FontWeight="Bold">Images</TextBlock>
            
            <TextBlock Margin="0 20" FontWeight="Bold">Image from web</TextBlock>
            <Border CornerRadius="10" ClipToBounds="True" Width="300">
                <Image Source="{Binding ImageSourceBitmapWeb^}" 
                       MaxWidth="300" 
                       HorizontalAlignment="Left"/>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
