<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AvaloniaApp.Views.GridPageView">
    <ScrollViewer>
        <StackPanel Margin="20">
            <TextBlock Margin="0 20" FontSize="20" FontWeight="Bold">Grids</TextBlock>
            
            <TextBlock Margin="0 20" FontSize="15" FontWeight="Bold">Standard Grid</TextBlock>
                
            <Grid ShowGridLines="True" 
                  ColumnDefinitions="*,*"
                  RowDefinitions="*,*"
                  Height="200" Width="400">
                <Rectangle Grid.Row="0" Grid.Column="0" Fill="Aqua"/>    
                <Rectangle Grid.Row="0" Grid.Column="1" Fill="Brown"/>    
                <Rectangle Grid.Row="1" Grid.Column="0" Fill="Bisque"/>    
                <StackPanel Grid.Row="1" Grid.Column="1">
                    <Button>Click</Button>
                </StackPanel>    
            </Grid>
            
        </StackPanel>
    </ScrollViewer>
</UserControl>
